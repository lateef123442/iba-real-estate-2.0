    .form-group input, .form-group textarea, .form-group select { width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 4px; }
    .form-group textarea { height: 100px; resize: vertical; }
    .form-row { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }
    .btn { padding: 0.75rem 1.5rem; border: none; border-radius: 4px; cursor: pointer; font-weight: 500; }
    .btn-primary { background: #3b82f6; color: white; }
    .btn-secondary { background: #6b7280; color: white; margin-right: 1rem; }
    .btn:hover { opacity: 0.9; }
    .image-preview { max-width: 300px; margin: 1rem 0; border-radius: 4px; }
    .video-preview { max-width: 300px; margin: 1rem 0; border-radius: 4px; }
    .preview-section { margin-bottom: 2rem; border: 1px solid #d1d5db; padding: 1rem; border-radius: 4px; }
  </style>
