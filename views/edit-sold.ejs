    <main role="main" aria-label="Edit sold property">
      <div class="form-container">
        <h1 class="text-2xl font-bold mb-4">Edit Sold Property</h1>
        <form action="/update-sold" method="POST" novalidate>
          <input type="hidden" name="id" value="<%= property.id %>">
          
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= property.title || '' %>" required maxlength="100">
          </div>
          
          <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" required><%= property.description || '' %></textarea>
          </div>

          <!-- Owner Details -->
          <div class="form-row">
            <div class="form-group">
              <label for="ownerName">Owner Name</label>
              <input type="text" id="ownerName" name="ownerName" value="<%= property.ownerName || '' %>" required>
            </div>
            <div class="form-group">
              <label for="ownerEmail">Owner Email</label>
              <input type="email" id="ownerEmail" name="ownerEmail" value="<%= property.ownerEmail || '' %>" required>
            </div>
          </div>

          <div class="form-group">
            <label for="ownerPhone">Owner Phone</label>
            <input type="tel" id="ownerPhone" name="ownerPhone" value="<%= property.ownerPhone || '' %>" required pattern="[0-9+\-\s()]{10,}">
          </div>

          <!-- Property Details -->
          <div class="form-row">
            <div class="form-group">
              <label for="propertyAddress">Property Address</label>
              <input type="text" id="propertyAddress" name="propertyAddress" value="<%= property.propertyAddress || '' %>" required>
            </div>
            <div class="form-group">
              <label for="amount">Amount (₦)</label>
              <input type="number" id="amount" name="amount" value="<%= property.amount || '' %>" min="0" step="1">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="bedrooms">Bedrooms</label>
              <input type="number" id="bedrooms" name="bedrooms" value="<%= property.bedrooms || '0' %>" min="0" max="10">
            </div>
            <div class="form-group">
              <label for="bathrooms">Bathrooms</label>
              <input type="number" id="bathrooms" name="bathrooms" value="<%= property.bathrooms || '0' %>" min="0" max="10">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="sqft">Square Feet</label>
              <input type="number" id="sqft" name="sqft" value="<%= property.sqft || '0' %>" min="0">
            </div>
            <div class="form-group">
              <label for="rentSell">Rent/Sell</label>
              <select id="rentSell" name="rentSell">
                <option value="" <%= !property.rentSell ? 'selected' : '' %>>Select</option>
                <option value="Sell" <%= property.rentSell === 'Sell' ? 'selected' : '' %>>Sell</option>
                <option value="Rent" <%= property.rentSell === 'Rent' ? 'selected' : '' %>>Rent</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label for="property-type">Property Type</label>
            <select id="property-type" name="property-type" required>
              <option value="" <%= !property['property-type'] ? 'selected' : '' %>>Select Type</option>
              <option value="Self Contain" <%= property['property-type'] === 'Self Contain' ? 'selected' : '' %>>Self Contain</option>
              
              <option value="Plots of Land" <%= property['property-type'] === 'Plots of Land' ? 'selected' : '' %>>Plots of Land</option>
              <option value="Duplex/Bangalow/Storey building" <%= property['property-type'] === 'Duplex/Bangalow/Storey building' ? 'selected' : '' %>>Duplex/Bangalow/Storey building</option>
             
            </select>
          </div>

          <!-- Preview Section (Read-Only Blobs) -->
