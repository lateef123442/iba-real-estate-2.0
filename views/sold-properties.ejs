    <main role="main" aria-label="Sold properties management">
      <section aria-label="Sold properties list">
        <h1 class="text-2xl font-bold mb-4">Sold Properties (<%= soldProperties.length %>)</h1>
        <div class="listings-grid" id="sold-listings" role="list">
          <% soldProperties.forEach(property => { %>
            <div class="property-card">
              <p style="display: none;" name="id"><%= property.id %></p>
              <div class="relative">
                <% if (property.image_data) { %>
                  <img src="<%= property.image_data %>" loading="lazy" alt="<%= property.title || 'Sold Property' %>" width="320" height="180" />
                <% } else { %>
                  <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                    <span class="material-icons text-gray-400">apartment</span>
                  </div>
                <% } %>
                <span class="status-sold">Sold</span>
              </div>
              <div class="property-content">
                <h3 class="property-title"><%= property.title || 'Untitled' %></h3>
                <p class="property-address"><%= property.propertyAddress || 'N/A' %></p>
                <div class="property-features">
                  <div class="feature"><span class="material-icons">bed</span><%= property.bedrooms || 'N/A' %></div>
                  <div class="feature"><span class="material-icons">bathtub</span><%= property.bathrooms || 'N/A' %></div>
                  <div class="feature"><span class="material-icons">square_foot</span><%= property.sqft || 'N/A' %> sqft</div>
                </div>
                <div class="property-price"># <%= property.amount || 'N/A' %></div>
                <p class="text-sm text-gray-600 mt-2"><%= (property.description || '').substring(0, 100) %>...</p>
                <div class="mt-4">
                  <!-- Edit Button -->
                  <a href="/edit-sold?id=<%= property.id %>" class="action-btn edit-btn">
                    <span class="material-icons" aria-hidden="true">edit</span> Edit
                  </a>
                  <!-- Unsold Button (Form POST) -->
                  <form action="/unsold" method="POST" style="display: inline;" onsubmit="return confirm('Move this property back to active sales?');">
                    <input type="hidden" name="id" value="<%= property.id %>">
                    <button type="submit" class="action-btn unsold-btn">
                      <span class="material-icons" aria-hidden="true">sell</span> Unsold/Sell
                    </button>
                  </form>
                  <!-- Delete Button (Form POST) -->
                  <form action="/delete-sold" method="POST" style="display: inline;" onsubmit="return confirm('Permanently delete this property?');">
                    <input type="hidden" name="id" value="<%= property.id %>">
                    <button type="submit" class="action-btn delete-btn">
                      <span class="material-icons" aria-hidden="true">delete</span> Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
